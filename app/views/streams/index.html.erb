<h1>Listing streams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Zc job</th>
    <th>Zc stream name</th>
    <th>Zc stream url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @streams.each do |stream| %>
  <tr>
    <td><%= stream.name %></td>
    <td><%= stream.description %></td>
    <td><%= stream.zc_job_id %></td>
    <td><%= stream.zc_stream_name %></td>
    <td><%= stream.zc_stream_url %></td>
    <td><%= link_to 'Show', stream %></td>
    <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
    <td><%= link_to 'Destroy', stream, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

