
<div class="row">
  <div class="span12">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  <legend>Forgot your password?</legend>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :class => "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button id="user_submit" type="submit" name="commit" class="btn btn-primary">Send me reset password instructions</button>
    </div>
  </div>
<% end %>
  </div>
</div>

<%= render :partial => "devise/shared/links" %>
